<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:weightSum="1">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Main_Menu"
    android:id="@+id/b_main_menu"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="0dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="0dp" />

<Switch
    android:layout_width="125dp"
    android:layout_height="wrap_content"
    android:text="Connect"
    android:id="@+id/connect"
    android:checked="false"
    android:contextClickable="false"
    android:clickable="true"
    android:layout_gravity="right"
    android:layout_weight="1.67"
    android:layout_marginLeft="518dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignBottom="@+id/b_main_menu" />

<ListView
    android:layout_width="wrap_content"
    android:layout_height="374dp"
    android:id="@+id/bluetooth_device_list"
    android:choiceMode="singleChoice"
    android:layout_marginLeft="0dp"
    android:layout_below="@+id/b_main_menu"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="401dp"
    android:layout_height="wrap_content"
    android:id="@+id/bluetooth_devices"
    android:visibility="visible"
    android:editable="false"
    android:focusable="false"
    android:layout_marginLeft="0dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true" />
</RelativeLayout>
