<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main_Menu"
        android:id="@+id/rc_main_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On/Off"
        android:id="@+id/switch2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/rc_main_menu"
        android:checked="false" />

    <com.example.phil.rc_car_app_v2_joystick.JoystickView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joystickView"
        android:layout_below="@+id/rc_main_menu"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/powerTextView" />

    <EditText
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:id="@+id/angleTextView"
        android:visibility="visible"
        android:editable="false"
        android:focusable="false"
        android:layout_marginLeft="0dp"
        android:layout_above="@+id/directionTextView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:id="@+id/powerTextView"
        android:visibility="visible"
        android:editable="false"
        android:focusable="false"
        android:layout_marginLeft="0dp"
        android:layout_above="@+id/angleTextView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:id="@+id/directionTextView"
        android:visibility="visible"
        android:editable="false"
        android:focusable="false"
        android:layout_marginLeft="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>